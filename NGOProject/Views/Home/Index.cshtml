@{
    ViewBag.Title = "Home";
 }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="NGO Events is a place to host events for the company">

    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/grid.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/ionicons.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendors/css/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/resources/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/resources/css/queries.css">
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,300italic' rel='stylesheet' type='text/css'>
    <title>NGO Events</title>

</head>
<body>
    <header>
        <nav>
            <div class="row">
                <img src="~/Content/resources/img/logo.png" alt="NGO Events logo" class="logo" />
                <ul class="main-nav js--main-nav">
                    <li></li>
                </ul>
                <a class="mobile-nav-icon js--nav-icon"><i class="ion-navicon-round"></i></a>
            </div>
        </nav>
        <div class="hero-text-box">
            <h1>Internal Company NGO Events Management System </h1>
        </div>

    </header>
    <section class="section-meals">
        <ul class="meals-showcase clearfix">
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/1.jpg" alt="Korean bibimbap with egg and vegetables">
                </figure>
            </li>
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/2.jpg" alt="Simple italian pizza with cherry tomatoes">
                </figure>
            </li>
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/3.jpg" alt="Chicken breast steak with vegetables">
                </figure>
            </li>
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/4.jpg" alt="Autumn pumpkin soup">
                </figure>
            </li>
        </ul>
        <ul class="meals-showcase clearfix">
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/5.jpg" alt="Paleo beef steak with vegetables">
                </figure>
            </li>
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/6.jpg" alt="Healthy baguette with egg and vegetables">
                </figure>
            </li>
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/7.jpg" alt="Burger with cheddar and bacon">
                </figure>
            </li>
            <li>
                <figure class="meal-photo">
                    <img src="~/Content/resources/img/8.jpg" alt="Granola with cherries and strawberries">
                </figure>
            </li>
        </ul>
    </section>
    <section class="section-features js--section-features" id="features">
        <div class="row">
            <h2>Join Fun Events &mdash; Increase your spirit</h2>
            <p class="long-copy">
                Hello, please use the company internal event registration system to participate!
                <i class="fas fa-sign-in-alt">@Html.ActionLink("LOG IN", "login", "login")</i>
            </p>
           
        </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/respond/1.4.2/respond.min.js"></script>
    <script src="//cdn.jsdelivr.net/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="//cdn.jsdelivr.net/selectivizr/1.0.3b/selectivizr.min.js"></script>
    <script src="vendors/js/jquery.waypoints.min.js"></script>
    <script src="resources/js/script.js"></script>

    <script>
        (function (i, s, o, g, r, a, m) {
